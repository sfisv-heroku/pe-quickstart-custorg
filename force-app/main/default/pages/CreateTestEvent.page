<apex:page controller="CreateEventController">
    <apex:form >
      <apex:pageBlock >
        <apex:pageBlockSection columns="1">
            <apex:pageBlockSectionItem >
                <apex:outputLabel for="numBatchesInput">Number of Events:</apex:outputLabel>      
                <apex:inputText value="{!numberOfBatches}" id="numBatchesInput"/>
            </apex:pageBlockSectionItem>
            <apex:pageBlockSectionItem >
                <apex:commandButton value="Create Event(s)" action="{!createEvent}"/>
            </apex:pageBlockSectionItem>
        </apex:pageBlockSection>
      </apex:pageBlock>
    </apex:form>
</apex:page>